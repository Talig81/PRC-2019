extends layout

block content
  .w3-container
		.w3-card-4
			header.w3-container
                h2 Obra + obra.tit
        .w3-card-4
            table.w3-table
                tr
                    th ID
                    th TIPO
                    th COMPOSITOR
                    th Arranjo
                tr
                    td= obra.id
                    td= obra.tipo
                    td= obra.compositor
                    td= obra.arr
            .w3-card-2
			    header.w3-container
                    h2 Partituras
                table.w3-table-all
                    tr
                        th Instrumento
                        th Voz
                        th Clave
                        th Afinação
                    each p in parts
                        tr
                            td= p.inst
                            td= p.voz
                            td= p.clave
                            td= p.afinacao
                   